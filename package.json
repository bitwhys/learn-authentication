{
  "name": "learn-authentication",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "concurrently 'yarn:watch-*'",
    "watch-server": "nodemon",
    "watch-browser": "browser-sync start --proxy 'localhost:3000' --files 'public/**/*.{css,png,jpg},views/*.hbs'",
    "watch-tailwind": "tailwindcss -i ./tailwind.css -o ./public/stylesheets/style.css --watch"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4"
  }
